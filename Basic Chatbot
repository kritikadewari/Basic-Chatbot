def greet():
    print("Hello! I'm ChatBot.")
    print("Type 'bye' to exit.\n")

def get_user_input():
    # Get input from the user and convert to lowercase
    return input("You: ").lower()

def generate_response(user_input):
    # Decide on a response based on the user's input
    if user_input == 'bye':
        return 'Goodbye! Have a great day!', True  # Second item indicates to exit
    elif 'hello' in user_input or 'hi' in user_input:
        return 'Hello there! How can I help you?', False
    elif 'how are you' in user_input:
        return "I'm just a bot, but I'm doing great! How about you?", False
    elif 'what is your name' in user_input:
        return "I'm a simple chatbot made with Python.", False
    elif 'help' in user_input:
        return "Sure! I can answer basic questions. Try saying hello!", False
    else:
        return "I'm not sure how to respond to that. Try asking something else!", False

def chatbot():
    greet()

    while True:
        user_input = get_user_input()
        response, should_exit = generate_response(user_input)
        print("ChatBot:", response)

        if should_exit:
            break

# Run the chatbot
chatbot()
